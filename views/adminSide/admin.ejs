<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>eCommerce Admin Dashboard</title>
  <link rel="stylesheet" href="/assets/css/admin.css">
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
      <img src="assets/images/logo.png" alt="Admin Profile" class="profile-img">
      <br><br>
      <h2>Admin Panel</h2>
    </div>
    <ul>
      <li><a href="#">Dashboard</a></li>
      <li><a href="#">Orders</a></li>
      <li><a href="#">Products</a></li>
      <li><a href="#">Categories</a></li>
      <li><a href="#">Customers</a></li>
      <li><a href="#">Settings</a></li>
      <li><a href="#">Logout</a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Top Navigation -->
    <div class="top-nav">
      <div class="welcome">
        <h2>Welcome, Admin</h2>
      </div>
      <div class="profile">
        <img src="assets/images/logo.png" alt="Admin Profile" class="profile-img">
        <!-- <span>Admin</span> -->
      </div>
    </div>

    <!-- Dashboard Content -->
    <div class="dashboard">
      <h3>Dashboard Overview</h3>
      <div class="cards">
        <div class="card">
          <h4>Total Sales</h4>
          <p>$25,000</p>
        </div>
        <div class="card">
          <h4>Orders</h4>
          <p>120</p>
        </div>
        <div class="card">
          <h4>Products</h4>
          <p>350</p>
        </div>
        <div class="card">
          <h4>Customers</h4>
          <p>220</p>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
